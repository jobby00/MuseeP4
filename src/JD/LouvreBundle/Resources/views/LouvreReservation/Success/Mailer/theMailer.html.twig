<!-- Tickets -->
{% for billet in resa.billets %}
    <table bgcolor="#414655" width="100%" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td background="http://lorempicsum.com/demo/symphony.png" bgcolor="#7bceeb" valign="top">
                <!--[if gte mso 9]>
                <v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="mso-width-percent:1000;">
                    <v:fill type="tile" src="http://lorempicsum.com/demo/symphony.jpg" color="#7bceeb" />
                    <v:textbox style="mso-fit-shape-to-text:true" inset="0,0,0,0">
                <![endif]-->
                <div>
                    <table align="center" width="720" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                        <tr>
                            <td height="15" style="font-size: 15px; line-height: 15px;"> &nbsp; </td>
                        </tr>
                        <tr>
                            <td style="text-align: center">
                                <a href="http://jobby00.com">
                                    <img src="https://www.louvre.fr/sites/all/themes/louvre/img/data/logo-louvre.jpg" width="160" border="0" alt="Logo Musée du Louvre">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td height="20" style="font-size: 20px; line-height: 20px;"> &nbsp; </td>
                        </tr>
                        <tr>
                            <td>
                                <table class="col3" width="160" align="left" cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ billet.nom|upper }} {{ billet.prenom|capitalize }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ billet.dateresa | date('d/m/Y') }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="20" style="font-size:20px; line-height: 20px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table align="left" width="30" cellpadding="0" cellspacing="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>

                                <table class="col3"  width="160" align="left" cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>

                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ billet.dateNaissance | date('d/m/Y') }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="20" style="font-size:20px; line-height: 20px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>

                                <table align="left" width="30" cellpadding="0" cellspacing="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>

                                <table class="col3"  width="120" align="left" cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ billet.pays }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="20" style="font-size:20px; line-height: 20px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table align="left" width="30" cellpadding="0" cellspacing="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>

                                <table class="col3"  width="160" align="left" cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ billet.pays }}{{ resa.resacode }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="30" style="font-size:30px; line-height: 30px;"> &nbsp; </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Questrial', Helvetica, sans-serif; text-align: center; font-size:18px; color: #FFF; mso-line-height-rule: exactly; line-height: 22px;">
                                            {{ (((20.0 * billet.prix)/100) + billet.prix)|number_format(2, ',',',') }} €
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="20" style="font-size:20px; line-height: 20px;"> &nbsp; </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <!--[if gte mso 9]>
                </v:textbox>
                </v:rect>
                <![endif]-->
            </td>
        </tr>
        </tbody>
    </table>
    <table  width="100%" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td height="30 " style="font-size: 30px; line-height: 30px;"> &nbsp; </td>
        <tr>
        </tbody>
    </table>
{% endfor %}
