{% extends "JDLouvreBundle::layout.html.twig" %}
{% block title %}
    Page Recapitilave - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 id="containers">Recapitilatif Des Billets</h4>
            </div>
            <div>
                <p><h4>La somme totale HT: {{ resa.prixtotal }} €</h4></p>
                <p><h4>La somme totale TTC: <spam class="price-totale">{{ (((resa.prixtotal * 19.6)) / 100 + resa.prixtotal)|number_format(2, ',',',')}}</spam> €</h4></p>
            </div>
            <div class="bs-component">
                    {% for billet in resa.billets %}
                        <div class="jumbotron">
                            <h4>{{ billet.nom|upper }} {{ billet.prenom|capitalize }}</h4>
                            <p>{{ billet.dateNaissance | date('d/m/Y') }}   {{ billet.pays }}     {{ billet.pays }}{{ resa.resacode }} </p>
                            <p>{{ billet.dateresa | date('d/m/Y') }}   {{ (((20.0 * billet.prix)/100) + billet.prix)|number_format(2, ',',',') }} €</p>
                        </div>
                    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}