{% extends "JDLouvreBundle::layout.html.twig" %}
{% block title %}
    Page panier - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 id="containers">Panier</h4>
            </div>
            <div class="bs-component">
                <div class="jumbotron">
                    <div class="row">
                        <table class="table table-striped  table-responsive">
                            <thead>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Prénom
                                </th>
                                <th>
                                    Pays
                                </th>
                                <th>
                                    Date de naissance
                                </th>
                                <th>
                                    Code reservation
                                </th>
                                <th>
                                    Date de visite
                                </th>
                                <th>
                                    Tarif HT
                                </th>
                                <th>
                                    Prix  TTC
                                </th>
                                <th>
                                    Modifié
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for billetResa in billetResa %}
                                {% for billet in billetResa.billets %}
                                    <tr>
                                        <td> {{ billet.nom|upper }} </td>
                                        <td> {{ billet.prenom|capitalize }} </td>
                                        <td> {{ billet.pays }} </td>
                                        <td> {{ billet.dateNaissance | date('d/m/Y') }} </td>
                                        <td> {{ billetResa.resacode }} </td>
                                        <td> {{ billet.dateresa | date('d/m/Y') }} </td>
                                        <td> {{ billet.prix }} €</td>
                                        <td> {{ (((19.6 * billet.prix)/100) + billet.prix)|number_format(2, ',',',') }} €</td>
                                        <td>
                                            <a href="{{ path('jd_reservation_modifier', {'id': billet.id}) }}" title="Modifier" >
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                            </tbody>
                        </table>
                        <p><h4>La somme total HT: {{ prixtotal }} €</h4></p>
                        <p><h4>La somme total TTC: <spam class="price-totale">{{ (((prixtotal * 19.6)) / 100 + prixtotal)|number_format(2, ',',',')}}</spam> €</h4></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}